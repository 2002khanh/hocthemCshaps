}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<br />
<div id="msg" style="color:blue">

</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnSave").click(function () {
                var emp = {};
                emp.VariantId = $("#VariantId").val();
                emp.ProductId = $("#ProductId").val();
                emp.ScreenSize = $("#ScreenSize").val();
                emp.RAM = $("#RAM").val();
                emp.Storage = $("#Storage").val();
                emp.CPU = $("#CPU ").val();
                emp.Color = $("#Color").val();
                emp.Price = $("#Price").val();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("/ProductVariants/Create")',
                    data: '{emp:' + JSON.stringify(emp) + '}',
                    dataType: "json",
                    contenType: "text/html ;charset=utf-8",
                    success: function (response) {
                        if (response.result == true) {
                            $("#msg").html("thêm dữ liệu thành công ");

                        } else {
                            $("#msg").html(response.error);
                        }
                    },
                    error: function (reponse) {
                        alert("lỗi thêm dữ liệu");
                    }
                })
                return false;
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
